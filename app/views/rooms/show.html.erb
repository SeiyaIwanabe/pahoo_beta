<div class="left-button">
  <%= link_to "詳細画面に戻る", user_path(current_user.id), class:"edit-link" %>
</div>
<h4 class="rooms-title">気になる同士</h4>
<% @entries.each do |e| %>
  <div class="user-name">
  <strong>
    <% if e.user.icon? %>
      <%= image_tag e.user.icon.url, class:"user-image" do %>
        <a class="rooms-user-link" href="/users/<%= e.user.id %>">
          <%= e.user.nickname %>さん
        </a>
      <% end %>
    <% else %>
      <a class="rooms-user-link" href="/users/<%= e.user.id %>">
        <%= e.user.nickname %>さん
      </a>
    <% end %>
  </strong>
  </div>
<% end %>
<hr>
<div class="chats">
  <div class="chat">
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <div class="chat-box">
          <div class="chat-face">
            <% if m.user.icon? %>
              <%= image_tag m.user.icon.url, class:"user-image" %>
            <% end %>
          </div>
          <div class="chat-hukidashi"> <strong><%= m.text %></strong> <br>
            <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="posts">
    <%= form_for @message do |f| %>
      <%= f.text_field :text, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
        <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.submit "投稿",class: 'form-submit'%>
    <% end %>
  </div>
</div>