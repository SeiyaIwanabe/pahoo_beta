<h1>Pahoo</h1>

<%= form_with url: login_path, local: true do |f| %>

  <div class="section">
    <%= f.label :id_name %>
    <%= f.text_field :id_name %>
  </div>

  <div class="section">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>


  <div>
    <%= f.submit "ログイン" %>
  </div>

  <%= link_to "Sign Up", new_user_path %>

<% end %>