<div class="outline">
  <h1 class="sessionPahoo">Pahoo</h1>

  <%= form_with url: login_path, local: true do |f| %>

    <div class="section">
      <%= f.label :ID %>
      <%= f.text_field :id_name %>
    </div>

    <div class="section">
      <%= f.label :パスワード %>
      <%= f.password_field :password %>
    </div>

    <div>
      <%= f.submit "さぁ、始めよう", class: "submitBtn" %>
    </div>

    <%= link_to "新規登録はこちらから", new_user_path, class: "toLogin" %>
  <% end %>

</div>