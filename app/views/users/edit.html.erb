<div class="outline">
  <h1>Pahoo</h1>

  <%= form_with model: @user, user_id: @user.id, local: true do |f| %>

    <div class="section">
      <label class="iconField">
        <% if @user.icon.present? %>
          <%= image_tag @user.icon.url, id: "img_prev", class: "setIcon" %>
        <% else %>
          <i class="fas fa-user-plus"></i>
        <% end %>
        <%= f.label :プロフィール画像を変更, class: "iconLabel" %>
        <%= f.file_field :icon, class: "iconFile", id: "user_img" %>
      </label>
    </div>

    <div class="section">
      <%= f.label :お名前 %>
      <%= f.text_field :nickname %>
    </div>

    <div class="section">
      <%= f.label :ID %>
      <%= f.text_field :id_name %>
    </div>

     <div class="checkArea">
      <p>興味のあるジャンルを選ぼう</p>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name, include_hidden: false, class: "checkBox") do |tag| %>
        <label class="genreLabel">
          <%= tag.check_box + tag.text %>
        </label>
      <% end %>
    </div>

    <div>
      <%= f.submit "プロフィールを更新", class: "user-edit--button" %>
    </div>

  <% end %>

</div>

<%= javascript_include_tag 'icon' %>
<%= javascript_include_tag 'genre-label' %>
