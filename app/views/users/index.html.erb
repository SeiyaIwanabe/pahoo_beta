<header class="header">
  <p id="pahoo">Pahoo</p>
  <%= link_to new_banner_path, class: "CreateBannerLink" do %>
    <i class="fas fa-plus-square"></i>
  <% end %>
</header>

<div class="search-tab" id="js-tab">
  <div class="search-tab-nav">
    <%= link_to "アカウント", "#", class: "search-tab-nav-item is-active", data: {nav: '0'} %>
    <%= link_to "投稿", "#", class: "search-tab-nav-item", data: {nav: '1'} %>
  </div>
  <div class="search-tab-contens">
    <div class="search-tab-contents-item" data-content="0">
      <div class="tagListArea">
        <% @tag_lists.each do |list| %>
          <%= link_to list.name, users_path(tag_id: list.id), class: "listLink" %>
        <% end %>
      </div>
      <% if params[:tag_id] %>
        <ul class="usersIndex">
          <% @users.each do |user| %>
            <li class="userList">
              <%= link_to user_path(id: user.id), class: "userShowLink" do %>
                <div class="left-icon">
                  <i class="fas fa-user-circle"></i>
                </div>
                <div class="right-name">
                  <p class="user-id"><%= user.id_name %></p>
                  <p class="user-nickname"><%= user.nickname %>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="defaultPostedArea">
          <% @posts.each do |video| %>
            <%= video_tag(video.post_video.to_s, controls: true, playsinline: true, class: "defaultContent") %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="search-tab-contents-item" data-content="1">その1</div>
  </div>
</div>

<%= render partial: "modules/footer" %>

<%= javascript_include_tag 'search-tab' %>
