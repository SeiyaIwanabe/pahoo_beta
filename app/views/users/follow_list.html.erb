<label id="js-nav-close"></label>

<div class="follow-area">
  <h2 class="follow-area__title">フォローリスト</h2>

  <div class="follow-list-section">
    <% @user.all_following.each do |following| %>
      <li class="follow-list-section__list">
        <%= link_to user_path(following), class: "follow-user-link" do %>
          <% if following.icon? %>
            <%= image_tag following.icon.url, class: "follow-user-icon"%>
          <% else %>
            <i class="fas fa-user-circle"></i>
          <% end %>
          <p class="following-user-name"><%= following.nickname %></p>
        <% end %>
        
      </li>
    <% end %>
  </div>
</div>

<%= render partial: "modules/footer" %>

<%= javascript_include_tag 'create' %>

