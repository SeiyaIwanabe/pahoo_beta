<div class="outline">

  <h1 class="resistrationTitle">Pahoo</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="section">
      <%= f.label :お名前 %>
      <%= f.text_field :nickname %>
    </div>

    <div class="section">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="section">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="checkArea">
      <p>興味のあるジャンルを選ぼう</p>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name, include_hidden: false, class: "checkBox") do |tag| %>
        <label class="genreLabel">
          <%= tag.check_box + tag.text %>
        </label>
      <% end %>
    </div>

    <%= f.submit "さぁ、始めよう", class: "submitBtn" %>

    <%= link_to "ログインはこちら", new_user_session_path, class: "toLogin" %>
  <% end %>

  
</div>

<%= javascript_include_tag 'genre-label' %>
