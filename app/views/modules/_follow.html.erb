<% unless current_user.id == user.id %>
  <div id="follow_form">
    <% if current_user.following? user %>
      <%= link_to "フォロー中", {controller: :users, action: :unfollow, user_id: user.id}, method: :put, class: "unfollow-btn"%>
    <% else %>
      <%= link_to "フォローする", {controller: :users, action: :follow, user_id: user.id}, method: :put ,class: "match-btn" %>
    <% end %>
  </div>
<% end %>
