<% unless current_user.id == user.id %>
  <div id="follow_form">
    <% if current_user.following? user %>
      <%= link_to "マッチング申請", {controller: :users,action: :unfollow, user_id: user.id}, method: :put, class: "match-btn"%>
    <% else %>
      <%= link_to "申請解除", {controller: :users, action: :follow, user_id: user.id}, method: :put ,class: "match-btn" %>
    <% end %>
  </div>
<% end %>
